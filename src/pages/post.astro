---
import Layout from "../layouts/Layout.astro";
if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData()
    const title = formData.get("title");
    const description = formData.get("description");
    const data = { title, description }
    
    await fetch("http://localhost:3211", {
        method : "POST",
        body : JSON.stringify(data),
        headers : {
            "Content-Type": "application/json",
        },
    });
}
---

<Layout title="Create A Post">
  <h1 class="title-text">Create A Post</h1>
  <div class="container">
    <form action="" method="post">
      <input type="text" placeholder="Masukkan Judul ...." name="title"/>
      <input type="text" placeholder="Masukkan Deskripsi ...." name="description"/>
      <button type="submit">Create A Post</button>
    </form>
  </div>
</Layout>

<style>
  .title-text {
    display: flex;
    color: aliceblue;
    justify-content: center;
    align-items: center;
  }

  .container {
    display: flex;
    /* width: 100%; */
  }

